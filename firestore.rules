rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if true;
    }

    match /counters/{counterId} {
      allow read, write: if true;
    }

    match /task-ids/{taskId} {
      allow read, write: if true;
    }

    match /tasks/{task} {
      allow read, write: if true;
    }
  }
}